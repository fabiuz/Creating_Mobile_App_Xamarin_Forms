<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Greetings.StackedBitmapPage"
             xmlns:local="clr-namespace:Greetings"
             Title="StackedBitmapPage">
    <StackLayout>
        <Label Text="320 x 240 Pixel Bitmap" 
               FontSize="Medium"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
        <Image Source="{local:ImageResource Greetings.Images.ModernUserInterface256.jpg}"
               HeightRequest="200"
               HorizontalOptions="Center"
               BackgroundColor="Aqua"
               SizeChanged="OnImageSizeChanged" />
        <Label x:Name="label"
               FontSize="Medium"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>